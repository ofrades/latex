\renewcommand{\section}[1]{
\pagebreak[4]
\needspace{6\baselineskip}
  {\vspace{-8pt}\begin{nscenter}\LARGE\ornC\hspace{10pt}% Adding a space to the text
  \addtocounter{chapter}{0}\addchaptertocentry{}{#1}%
  \addchapmark{#1}\textsc{#1}% The actual chapter name
  \hspace{10pt}\scalebox{-1}[1]{\ornC}\vspace{-10pt}% and a 180 degree rotated version of the ornament
    \end{nscenter}
}}

\newcommand{\sectioninfo}[2]{
\pagebreak[4]
\needspace{7\baselineskip}
  {\vspace{-8pt}\begin{nscenter}\LARGE
    \ornC% Inserting the ornament
    \hspace{10pt}% Adding a space to the text
    \addtocounter{chapter}{0}\addchaptertocentry{}{#1}
    \addchapmark{#1}\textsc{#1}
    \hspace{10pt}% Another space after the title
    \scalebox{-1}[1]{\ornC}% and a 180 degree rotated version of the ornament
    \par\emph{#2}
    \vspace{-10pt}\end{nscenter}
}}

\renewcommand{\subsection}[1]{
\pagebreak[3]
\needspace{5\baselineskip}
  {\vspace{-6pt}\begin{nscenter}\large
  \addtocounter{section}{1}\addsectiontocentry{}{#1}
  \addsecmark{#1}\textsc{#1}
    \vspace{-8pt}\end{nscenter}
}}

