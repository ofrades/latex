\newcommand{\titulo}[1]{
\pagebreak[4]
\needspace{6\baselineskip}
  {\vspace{-8pt}\begin{center}\LARGE\ornA\hspace{10pt}% Adding a space to the text
  \addtocounter{chapter}{0}\addchaptertocentry{}{#1}%
  \addchapmark{#1}\textsc{#1}% The actual chapter name
  \hspace{10pt}\scalebox{-1}[1]{\ornA}\vspace{-10pt}% and a 180 degree rotated version of the ornament
    \end{center}
}}

\renewcommand{\section}[1]{
\pagebreak[4]
\needspace{6\baselineskip}
  {\vspace{-8pt}\begin{center}\LARGE\ornB\hspace{10pt}% Adding a space to the text
  \addtocounter{chapter}{0}\addchaptertocentry{}{#1}%
  \addchapmark{#1}\textsc{#1}% The actual chapter name
  \hspace{10pt}\scalebox{-1}[1]{\ornB}\vspace{-10pt}% and a 180 degree rotated version of the ornament
    \end{center}
}}

\newcommand{\sectioninfo}[2]{
\pagebreak[4]
\needspace{7\baselineskip}
  {\vspace{-8pt}\begin{center}\LARGE
    \ornC% Inserting the ornament
    \hspace{10pt}% Adding a space to the text
    \addtocounter{chapter}{0}\addchaptertocentry{}{#1}
    \addchapmark{#1}\textsc{#1}
    \hspace{10pt}% Another space after the title
    \scalebox{-1}[1]{\ornC}% and a 180 degree rotated version of the ornament
    \par\emph{#2}
    \vspace{-10pt}\end{center}
}}

